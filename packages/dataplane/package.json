{
  "name": "@shutters/dataplane",
  "type": "module",
  "module": "src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "typecheck": "tsc",
    "test": "bun test",
    "ci:codequality": "biome ci .",
    "format": "biome format",
    "format:fix": "biome format --write",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "check": "biome check",
    "check:fix": "biome check --write",
    "build": "bun build --compile --minify --sourcemap ./src/index.ts --outfile dist/cdn",
    "build:clean": "bun run clean && bun run build",
    "dev": "bun run ./src/index.ts"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.2",
    "@libsql/client": "^0.14.0",
    "@shutters/lexicons": "workspace:*",
    "@shutters/shutterkit": "workspace:*",
    "drizzle-orm": "^0.39.3",
    "hono": "^4.7.0",
    "sentry-integration-libsql-client": "^1.3.0",
    "zod": "^3.24.1"
  }
}
